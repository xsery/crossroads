                    <conditions>
                        <condition id="-3" inverted="1" name="Is on-screen" sid="655979056892949" type="Platform" />
                        <condition id="-2" name="Compare Y" sid="439678237944190" type="Platform">
                            <param id="0" name="Comparison">4</param>
